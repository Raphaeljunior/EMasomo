<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#7b7b7b">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Learn Using"
            android:id="@+id/textView"
            android:gravity="center"
            android:textColor="#941818"
            android:textSize="50dp"
            android:fontFamily="Droid Sans"
            android:textStyle="bold" android:layout_centerVertical="true" android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Past Papers"
            android:gravity="center"
            android:textColor="#941818"
            android:textSize="50dp"
            android:fontFamily="Droid Sans"
            android:textStyle="bold"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView" android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>